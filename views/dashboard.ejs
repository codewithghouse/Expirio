<%- include('partials/header') %>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">

        <!-- Welcome Section -->
        <div class="px-4 sm:px-0 mb-6 flex justify-between items-end">
            <div>
                <h2 class="text-2xl font-bold text-gray-900">
                    Welcome back, <%= user.name %>! ðŸ‘‹
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Here's what's happening in your kitchen today.
                </p>
            </div>
            <div>
                <!-- Subscription Badge -->
                <% if (subscription && subscription.plan) { %>
                    <div
                        class="flex items-center space-x-2 bg-white px-3 py-1.5 rounded-full shadow-sm border border-gray-200">
                        <span class="inline-flex h-2.5 w-2.5 rounded-full 
                            <%= subscription.isActive ? 'bg-emerald-400' : 'bg-red-400' %>">
                        </span>
                        <div class="text-sm font-medium text-gray-700 capitalize">
                            <%= subscription.plan.name %> Plan
                        </div>
                        <% if (subscription.plan.isLifetime) { %>
                            <span
                                class="text-xs text-indigo-600 font-semibold bg-indigo-50 px-2 py-0.5 rounded-full">Lifetime</span>
                            <% } else if (subscription.daysLeft !==null && subscription.daysLeft !==undefined) { %>
                                <span class="text-xs text-gray-500 border-l pl-2 ml-1">
                                    <%= subscription.daysLeft %> days left
                                </span>
                                <% } %>
                    </div>
                    <% } %>
            </div>
        </div>

        <!-- Priority Banner -->
        <div class="px-4 sm:px-0 mb-8">
            <% if (stats.expired> 0) { %>
                <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md shadow-sm cursor-pointer hover:bg-red-100 transition-colors"
                    onclick="window.location.href='/inventory/expired'">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700 font-medium">
                                Action Required: You have <%= stats.expired %> expired item(s). Please remove them.
                            </p>
                        </div>
                    </div>
                </div>
                <% } else if (stats.expiring> 0) { %>
                    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-md shadow-sm cursor-pointer hover:bg-yellow-100 transition-colors"
                        onclick="window.location.href='/inventory/expiring'">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-clock text-yellow-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-yellow-700 font-medium">
                                    Heads up: You have <%= stats.expiring %> item(s) expiring soon. Plan a meal!
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } else if (stats.total> 0) { %>
                        <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded-md shadow-sm">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-green-700 font-medium">
                                        Everything looks fresh! Good job managing your inventory.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-md shadow-sm cursor-pointer hover:bg-blue-100 transition-colors"
                                onclick="window.location.href='/inventory/add'">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-info-circle text-blue-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-blue-700 font-medium">
                                            Your inventory is empty. Add some items to get started!
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
        </div>

        <!-- Stat Cards -->
        <div class="px-4 sm:px-0 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">

            <!-- Total Items -->
            <a href="/inventory/fresh"
                class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
                            <i class="fas fa-layer-group text-white text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Total Items
                                </dt>
                                <dd class="text-3xl font-semibold text-gray-900">
                                    <%= stats.total %>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Fresh Items -->
            <a href="/inventory/fresh"
                class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-emerald-500 rounded-md p-3">
                            <i class="fas fa-leaf text-white text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Fresh
                                </dt>
                                <dd class="text-3xl font-semibold text-gray-900">
                                    <%= stats.fresh %>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Expiring Soon -->
            <a href="/inventory/expiring"
                class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                            <i class="fas fa-hourglass-half text-white text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Expiring Soon
                                </dt>
                                <dd class="text-3xl font-semibold text-gray-900">
                                    <%= stats.expiring %>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Expired -->
            <a href="/inventory/expired"
                class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
                            <i class="fas fa-trash-alt text-white text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Expired
                                </dt>
                                <dd class="text-3xl font-semibold text-gray-900">
                                    <%= stats.expired %>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Quick Links -->
        <div class="mt-8 px-4 sm:px-0">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <a href="/inventory/add"
                    class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-emerald-500">
                    <div class="flex-shrink-0">
                        <div class="h-10 w-10 rounded-full bg-emerald-100 flex items-center justify-center">
                            <i class="fas fa-plus text-emerald-600"></i>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <span class="absolute inset-0" aria-hidden="true"></span>
                        <p class="text-sm font-medium text-gray-900">Add Item</p>
                        <p class="text-sm text-gray-500">Scan or manually add food</p>
                    </div>
                </a>

                <a href="/recipes"
                    class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-emerald-500">
                    <div class="flex-shrink-0">
                        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                            <i class="fas fa-utensils text-indigo-600"></i>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <span class="absolute inset-0" aria-hidden="true"></span>
                        <p class="text-sm font-medium text-gray-900">Get Recipe Ideas</p>
                        <p class="text-sm text-gray-500">Based on what you have expiring</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>