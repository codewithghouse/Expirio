<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>
        <%= typeof title !='undefined' ? title : 'Expirio' %>
    </title>
    <link href="/styles/output.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-gray-50 font-sans text-gray-900 min-h-screen flex flex-col">

    <!-- Flash Messages -->
    <% if(typeof success_msg !='undefined' && success_msg !='' ){ %>
        <div class="fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-lg z-[60] transition-opacity duration-500"
            role="alert" id="success-alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">
                <%= success_msg %>
            </span>
        </div>
        <% } %>

            <% if(typeof error_msg !='undefined' && error_msg !='' ){ %>
                <div class="fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-lg z-[60] transition-opacity duration-500"
                    role="alert" id="error-alert">
                    <strong class="font-bold">Error!</strong>
                    <span class="block sm:inline">
                        <%= error_msg %>
                    </span>
                </div>
                <% } %>

                    <% if(typeof error !='undefined' && error !='' ){ %>
                        <div class="fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-lg z-[60] transition-opacity duration-500"
                            role="alert" id="passport-error">
                            <strong class="font-bold">Error!</strong>
                            <span class="block sm:inline">
                                <%= error %>
                            </span>
                        </div>
                        <% } %>

                            <!-- Page Container without padding, padding is on Main -->
                            <div class="min-h-screen bg-gray-100 flex flex-col">

                                <!-- Mobile Header (Logo + Alerts) -->
                                <nav
                                    class="md:hidden sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-gray-100 transition-colors duration-300">
                                    <div class="px-6 h-14 flex justify-between items-center">
                                        <!-- Brand -->
                                        <a href="/dashboard" class="flex items-center gap-2 group">
                                            <div
                                                class="w-8 h-8 rounded-xl bg-gradient-to-br from-brand-400 to-brand-600 flex items-center justify-center text-white shadow-brand-200 shadow-lg">
                                                <i class="fas fa-leaf text-sm"></i>
                                            </div>
                                            <span
                                                class="text-xl font-bold text-gray-800 tracking-tight group-hover:text-brand-600 transition-colors">Expirio</span>
                                        </a>

                                        <!-- Actions -->
                                        <% if(typeof user !='undefined' ) { %>
                                            <div class="flex items-center gap-3">
                                                <a href="/alerts"
                                                    class="relative w-9 h-9 flex items-center justify-center rounded-full bg-gray-50 text-gray-500 hover:text-brand-600 hover:bg-brand-50 transition-all">
                                                    <i class="far fa-bell text-lg"></i>
                                                    <% if(typeof stats !='undefined' && stats.unreadAlerts> 0) { %>
                                                        <span
                                                            class="absolute top-2 right-2 h-2 w-2 rounded-full bg-red-500 ring-2 ring-white"></span>
                                                        <% } %>
                                                </a>
                                            </div>
                                            <% } %>
                                    </div>
                                </nav>

                                <!-- Desktop Header -->
                                <nav class="bg-white border-b border-gray-100 hidden md:block sticky top-0 z-50">
                                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                                        <div class="flex justify-between h-20"> <!-- Increased height -->
                                            <div class="flex">
                                                <div class="flex-shrink-0 flex items-center gap-2">
                                                    <div
                                                        class="w-8 h-8 rounded-xl bg-gradient-to-br from-brand-400 to-brand-600 flex items-center justify-center text-white shadow-sm">
                                                        <i class="fas fa-leaf text-sm"></i>
                                                    </div>
                                                    <a href="/dashboard"
                                                        class="text-2xl font-bold text-gray-900 tracking-tight">Expirio</a>
                                                </div>
                                                <% if(typeof user !='undefined' ) { %>
                                                    <div class="hidden sm:-my-px sm:ml-10 sm:flex sm:space-x-8">
                                                        <a href="/dashboard"
                                                            class="<%= path === '/dashboard' ? 'border-brand-500 text-gray-900' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors">
                                                            Dashboard
                                                        </a>
                                                        <a href="/inventory/fresh"
                                                            class="<%= path && path.includes('/inventory') ? 'border-brand-500 text-gray-900' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors">
                                                            My Pantry
                                                        </a>
                                                        <a href="/recipes"
                                                            class="<%= path && path.includes('/recipes') ? 'border-brand-500 text-gray-900' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors">
                                                            Recipes
                                                        </a>
                                                        <a href="/alerts"
                                                            class="<%= path && path.includes('/alerts') ? 'border-brand-500 text-gray-900' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors">
                                                            Alerts
                                                        </a>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <% if(typeof user !='undefined' ) { %>
                                                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                                                    <a href="/auth/logout"
                                                        class="px-4 py-2 text-sm text-gray-500 hover:text-brand-600 transition-colors font-medium">Logout</a>
                                                    <div
                                                        class="w-8 h-8 rounded-full bg-brand-100 flex items-center justify-center text-brand-700 font-semibold text-sm">
                                                        <%= user.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                </div>
                                                <% } else { %>
                                                    <div class="flex items-center space-x-4">
                                                        <a href="/auth/login"
                                                            class="text-sm font-medium text-gray-500 hover:text-gray-900">Login</a>
                                                        <a href="/auth/register"
                                                            class="px-4 py-2 rounded-xl bg-brand-600 text-white text-sm font-medium hover:bg-brand-700 shadow-lg shadow-brand-200 transition-all">Get
                                                            Started</a>
                                                    </div>
                                                    <% } %>
                                        </div>
                                    </div>
                                </nav>

                                <!-- Apply safe mobile padding to Main -->
                                <main class="flex-grow w-full pb-[80px] md:pb-0">