<%- include('../partials/header') %>
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gray-50">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg border border-gray-100">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Join Expirio
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Or
                    <a href="/auth/login" class="font-medium text-emerald-600 hover:text-emerald-500 transition-colors">
                        sign in to your account
                    </a>
                </p>
            </div>

            <% if (typeof errors !='undefined' ) { %>
                <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
                    <div class="flex">
                        <div class="ml-3">
                            <% errors.forEach(function(error) { %>
                                <p class="text-sm text-red-700">
                                    <%= error.msg %>
                                </p>
                                <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

                    <form class="mt-8 space-y-6" action="/auth/register" method="POST">
                        <div class="rounded-md shadow-sm -space-y-px">
                            <div>
                                <label for="name" class="sr-only">Full Name</label>
                                <input id="name" name="name" type="text" autocomplete="name" required
                                    class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm"
                                    placeholder="Full Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                            </div>
                            <div>
                                <label for="email-address" class="sr-only">Email address</label>
                                <input id="email-address" name="email" type="email" autocomplete="email" required
                                    class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm"
                                    placeholder="Email address" value="<%= typeof email != 'undefined' ? email : '' %>">
                            </div>
                            <div>
                                <label for="password" class="sr-only">Password</label>
                                <input id="password" name="password" type="password" autocomplete="new-password"
                                    required
                                    class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm"
                                    placeholder="Password (min 6 chars)">
                            </div>
                            <div>
                                <label for="confirmPassword" class="sr-only">Confirm Password</label>
                                <input id="confirmPassword" name="confirmPassword" type="password"
                                    autocomplete="new-password" required
                                    class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm"
                                    placeholder="Confirm Password">
                            </div>
                        </div>

                        <div>
                            <button type="submit"
                                class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                                Register
                            </button>
                        </div>
                    </form>
        </div>
    </div>