<%- include('../partials/header') %>

    <!-- Custom Inventory Styles -->
    <link rel="stylesheet" href="/styles/inventory.css">

    <!-- Barcode Scanner Library -->
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>


    <!-- Sticky Search Header (Mobile) -->
    <div class="sticky top-0 z-40 bg-white/95 backdrop-blur-sm border-b border-gray-50 md:hidden" id="sticky-header">
        <div class="px-5 pt-5 pb-2">
            <div class="flex items-center gap-3">
                <!-- Search Input -->
                <div class="flex-1 relative shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400 text-lg"></i>
                    </div>
                    <input type="text" id="app-search-input"
                        class="block w-full pl-12 pr-4 py-3.5 border-none rounded-[1.5rem] bg-gray-100/80 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-0 focus:bg-gray-100 transition-all font-medium text-sm"
                        placeholder="Search Store" autocomplete="off">
                </div>

                <!-- Filter Toggle -->
                <button onclick="openSortFilter()"
                    class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-gray-100/80 text-gray-600 hover:text-emerald-600 rounded-[1.2rem] focus:outline-none active:scale-95 transition-all relative">
                    <i class="fas fa-sliders-h text-lg"></i>
                    <span id="filter-active-indicator"
                        class="hidden absolute top-3 right-3 w-2 h-2 bg-emerald-500 rounded-full border-2 border-white"></span>
                </button>
            </div>
        </div>

        <!-- Horizontal Categories (Mobile) -->
        <div class="pl-5 pb-4 pt-2 overflow-x-auto no-scrollbar flex items-center gap-3">
            <button onclick="filterByCategory('all')"
                class="cat-pill whitespace-nowrap px-6 py-2.5 rounded-full bg-emerald-600 text-white text-sm font-bold shadow-lg shadow-emerald-200/50 transition-all transform active:scale-95 border border-transparent">
                All Items
            </button>
            <button onclick="filterByCategory('fresh')"
                class="cat-pill whitespace-nowrap px-6 py-2.5 rounded-full bg-white text-gray-600 border border-gray-100 text-sm font-bold shadow-sm transition-all transform active:scale-95 active:bg-gray-50">
                Fresh
            </button>
            <button onclick="filterByCategory('expiring')"
                class="cat-pill whitespace-nowrap px-6 py-2.5 rounded-full bg-white text-gray-600 border border-gray-100 text-sm font-bold shadow-sm transition-all transform active:scale-95 active:bg-gray-50">
                Expiring
            </button>
            <button onclick="filterByCategory('expired')"
                class="cat-pill whitespace-nowrap px-6 py-2.5 rounded-full bg-white text-gray-600 border border-gray-100 text-sm font-bold shadow-sm transition-all transform active:scale-95 active:bg-gray-50">
                Expired
            </button>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8">
        <% if (items.length===0) { %>
            <!-- Empty State -->
            <div
                class="text-center py-16 bg-white rounded-[2rem] border border-gray-50 shadow-[0_8px_30px_rgb(0,0,0,0.04)] mt-4">
                <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-emerald-50 mb-6">
                    <i class="fas fa-carrot text-emerald-400 text-3xl"></i>
                </div>
                <h3 class="mt-2 text-lg font-bold text-gray-900">No Items Yet</h3>
                <p class="mt-2 text-sm text-gray-400 px-8 leading-relaxed">Your pantry is empty. Add your first grocery
                    item to start tracking.</p>
                <div class="mt-8">
                    <button onclick="openModal()"
                        class="inline-flex items-center px-8 py-4 border border-transparent shadow-lg shadow-emerald-200 text-sm font-bold rounded-full text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none active:scale-95 transition-all">
                        <i class="fas fa-plus mr-2"></i> Add Item
                    </button>
                </div>
            </div>
            <% } else { %>

                <!-- MOBILE LAYOUT: New Row Card Design (md:hidden) -->
                <div id="mobile-inventory-list" class="flex flex-col gap-4 md:hidden pt-2">
                    <!-- Dynamic Headers for sections can be added via JS, keeping it simple list for now -->

                    <% items.forEach(function(item) { /* Logic Block */ const today=new Date(); const expiry=new
                        Date(item.expiryDate); const diffTime=expiry.getTime() - today.getTime(); const
                        diffDays=Math.ceil(diffTime / (1000 * 60 * 60 * 24)); let expiryText="" ; let
                        expiryColor="text-gray-400" ; let iconBg="bg-gray-50" ; let statusSortValue=0; if (diffDays> 0)
                        {
                        expiryText = diffDays + (diffDays !== 1 ? " days" : " day") + " left";
                        if (diffDays <= 3) { expiryColor="text-amber-500" ; iconBg="bg-amber-50" ; statusSortValue=2; }
                            else { expiryColor="text-emerald-500" ; iconBg="bg-emerald-50" ; statusSortValue=3; } } else
                            if (diffDays===0) { expiryText="Expires TODAY" ; expiryColor="text-orange-500" ;
                            iconBg="bg-orange-50" ; statusSortValue=1; } else { expiryText="Expired " +
                            Math.abs(diffDays) + "d ago" ; expiryColor="text-red-500" ; iconBg="bg-red-50" ;
                            statusSortValue=0; } %>
                            <div class="inventory-item w-full bg-white rounded-[1.8rem] p-4 flex items-center justify-between shadow-[0_4px_20px_rgb(0,0,0,0.03)] border border-gray-50/50"
                                data-name="<%= item.name.toLowerCase() %>" data-id="<%= item._id %>"
                                data-status-val="<%= statusSortValue %>" data-expiry-days="<%= diffDays %>"
                                data-category="unknown">

                                <!-- Left: Icon & Text -->
                                <div class="flex items-center flex-1 min-w-0 gap-4">
                                    <!-- Icon Box -->
                                    <div
                                        class="flex-shrink-0 w-[3.5rem] h-[3.5rem] <%= iconBg %> rounded-2xl flex items-center justify-center text-2xl shadow-sm">
                                        <span class="item-icon transform -rotate-6">
                                            <% if(item.name.toLowerCase().includes('apple')) { %>üçé<% } else
                                                    if(item.name.toLowerCase().includes('banana')) { %>üçå<% } else
                                                        if(item.name.toLowerCase().includes('milk')) { %>ü•õ<% } else
                                                            if(item.name.toLowerCase().includes('bread')) { %>üçû<% }
                                                                else if(item.name.toLowerCase().includes('carrot')) { %>
                                                                ü•ï<% } else { %>üì¶<% } %>
                                        </span>
                                    </div>

                                    <!-- Text Info -->
                                    <div class="flex-1 min-w-0 flex flex-col justify-center">
                                        <h3
                                            class="text-[17px] font-bold text-gray-800 leading-tight truncate capitalize mb-0.5">
                                            <%= item.name %>
                                        </h3>
                                        <div class="flex items-center text-xs font-semibold gap-2">
                                            <span class="<%= expiryColor %>">
                                                <%= expiryText %>
                                            </span>
                                            <span class="w-1 h-1 rounded-full bg-gray-300"></span>
                                            <span class="text-gray-400">
                                                <%= item.quantity %> pcs
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: Action Button -->
                                <div class="flex items-center ml-2">
                                    <button onclick="openItemActionSheet('<%= item._id %>', '<%= item.name %>')"
                                        class="w-10 h-10 rounded-full bg-emerald-50 text-emerald-600 flex items-center justify-center active:scale-90 transition-transform shadow-sm border border-emerald-100/50">
                                        <i class="fas fa-plus text-sm"></i>
                                    </button>
                                </div>
                            </div>
                            <% }); %>
                </div>


                <!-- DESKTOP LAYOUT: Grid (hidden md:grid) -->
                <div id="desktop-inventory-grid" class="hidden md:grid grid-cols-2 lg:grid-cols-3 gap-4 pt-2">
                    <% items.forEach(function(item) { /* Shared Logic Block */ const today=new Date(); const expiry=new
                        Date(item.expiryDate); const diffTime=expiry.getTime() - today.getTime(); const
                        diffDays=Math.ceil(diffTime / (1000 * 60 * 60 * 24)); let expiryText="" ; let
                        expiryColor="text-gray-500" ; let statusSortValue=0; if (diffDays> 0) {
                        expiryText = diffDays + (diffDays !== 1 ? " days" : " day");
                        if (diffDays <= 3) { expiryColor="text-amber-600" ; statusSortValue=2; } else {
                            expiryColor="text-emerald-600" ; statusSortValue=3; } } else if (diffDays===0) {
                            expiryText="Today" ; expiryColor="text-orange-600" ; statusSortValue=1; } else {
                            expiryText=Math.abs(diffDays) + "d ago" ; expiryColor="text-red-600" ; statusSortValue=0; }
                            %>
                            <div class="inventory-item group bg-white rounded-xl border border-gray-100 shadow-sm p-5 hover:shadow-md transition-all relative overflow-hidden"
                                data-name="<%= item.name.toLowerCase() %>" data-id="<%= item._id %>"
                                data-status-val="<%= statusSortValue %>" data-expiry-days="<%= diffDays %>"
                                data-category="unknown">

                                <div class="flex justify-between items-start mb-4">
                                    <div
                                        class="w-10 h-10 bg-emerald-50 rounded-full flex items-center justify-center text-xl">
                                        <span class="item-icon">üì¶</span>
                                    </div>
                                    <span
                                        class="text-xs font-bold <%= expiryColor %> bg-gray-50 px-2 py-1 rounded-md border border-gray-100">
                                        <%= expiryText %>
                                    </span>
                                </div>

                                <h3 class="text-lg font-bold text-gray-900 truncate mb-1 capitalize">
                                    <%= item.name %>
                                </h3>
                                <div class="flex justify-between items-center text-sm text-gray-500">
                                    <span>Qty: <span class="font-bold text-gray-700">
                                            <%= item.quantity %>
                                        </span></span>
                                    <form action="/inventory/<%= item._id %>?_method=DELETE" method="POST"
                                        onsubmit="return confirm('Remove?');"
                                        class="opacity-0 group-hover:opacity-100 transition-opacity">
                                        <button type="submit" class="text-gray-300 hover:text-red-500 px-2">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }); %>
                </div>

                <div id="no-results" class="hidden text-center py-12">
                    <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-search text-gray-300 text-2xl"></i>
                    </div>
                    <p class="text-gray-500 font-medium">No items match your search.</p>
                </div>
                <% } %>
    </div>

    <!-- Floating Action Button (Standard Bottom Right) -->
    <button onclick="openModal()"
        class="fixed bottom-20 right-4 bg-gray-900 hover:bg-black text-white rounded-2xl p-4 shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-all z-30 flex items-center justify-center md:hidden active:scale-95">
        <i class="fas fa-plus text-xl"></i>
    </button>

    <!-- Batch Add Modal -->
    <div id="batchAddModal" class="fixed inset-0 z-50 hidden" role="dialog" aria-modal="true">
        <div class="absolute inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity" onclick="closeModal()"></div>
        <div
            class="absolute bottom-0 inset-x-0 h-[92vh] bg-white rounded-t-[2rem] shadow-2xl flex flex-col overflow-hidden animate-fade-in-up">
            <!-- Handle -->
            <div class="w-full flex justify-center pt-3 pb-2 flex-shrink-0" onclick="closeModal()">
                <div class="w-12 h-1.5 bg-gray-300 rounded-full"></div>
            </div>
            <!-- Header -->
            <div class="px-6 pb-4 flex justify-between items-center flex-shrink-0">
                <div>
                    <h2 class="text-xl font-bold text-gray-900">Add Items</h2>
                    <p class="text-sm text-gray-500" id="pending-count-label">0 items pending</p>
                </div>
                <button onclick="closeModal()" class="p-2 bg-gray-100 rounded-full text-gray-600 hover:bg-gray-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <!-- Content -->
            <div class="flex-1 overflow-y-auto p-6 space-y-8 no-scrollbar bg-gray-50">
                <!-- Pending List -->
                <div id="pending-section" class="hidden">
                    <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">Pending to Add</h3>
                    <div id="pending-list" class="space-y-3"></div>
                </div>
                <!-- Suggestions (Server Side Rendered) -->
                <div>
                    <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">Quick Suggestions</h3>
                    <div class="grid grid-cols-4 gap-3">
                        <% suggestions.forEach(function(s) { %>
                            <button onclick="addToBatch('<%= s.name.replace(/'/g, " \\'") %>', <%= s.shelf %>)"
                                    class="flex flex-col items-center justify-center p-2 rounded-xl bg-white border
                                    border-gray-100 shadow-sm active:scale-95 active:ring-2 active:ring-emerald-500
                                    transition-all h-24">
                                    <span class="text-2xl mb-1">
                                        <%= s.icon %>
                                    </span>
                                    <span
                                        class="text-[10px] font-bold text-gray-700 truncate w-full text-center leading-tight">
                                        <%= s.name %>
                                    </span>
                                    <div
                                        class="mt-1 w-5 h-5 rounded-full bg-emerald-50 text-emerald-600 flex items-center justify-center">
                                        <i class="fas fa-plus text-[8px]"></i>
                                    </div>
                            </button>
                            <% }); %>
                    </div>
                </div>
                <!-- Manual/Scan -->
                <div class="p-5 rounded-2xl bg-white border border-dashed border-gray-300 text-center relative">
                    <!-- Scanner Container (Hidden by default) -->
                    <div id="scanner-container"
                        class="hidden w-full h-64 bg-black rounded-xl overflow-hidden mb-4 relative">
                        <div id="reader" class="w-full h-full"></div>
                        <button onclick="stopScanner()"
                            class="absolute top-2 right-2 p-2 bg-white/20 backdrop-blur-md text-white rounded-full z-10">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <p class="text-xs text-gray-500 mb-4" id="scan-instruction">Can't find what you're looking for?</p>
                    <div class="flex space-x-3 justify-center" id="scan-buttons">
                        <button onclick="startScanner()"
                            class="flex-1 px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm font-bold text-gray-700 shadow-sm flex items-center justify-center active:bg-gray-100">
                            <i class="fas fa-barcode mr-2 text-gray-400"></i> Scan Barcode
                        </button>
                        <button
                            class="flex-1 px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm font-bold text-gray-700 shadow-sm flex items-center justify-center active:bg-gray-100">
                            <i class="fas fa-keyboard mr-2 text-gray-400"></i> Type Name
                        </button>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <div class="p-6 border-t border-gray-100 bg-white pb-8 flex-shrink-0">
                <button onclick="submitBatch()" id="btn-add-all" disabled
                    class="w-full py-4 rounded-2xl bg-gray-900 text-white font-bold text-lg shadow-lg shadow-gray-300 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center transition-all active:scale-[0.98]">
                    <span>Add All Items</span>
                    <i class="fas fa-arrow-right ml-2 opacity-60"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Unified Sort & Filter Sheet -->
    <div id="sortFilterOverlay" class="fixed inset-0 bg-black/50 z-50 hidden transition-opacity backdrop-blur-[2px]"
        onclick="closeSortFilter()"></div>
    <div id="sortFilterPanel"
        class="fixed bottom-0 left-0 right-0 bg-white rounded-t-[2rem] shadow-2xl z-50 transform translate-y-full hidden transition-transform duration-300 ease-out max-h-[85vh] overflow-y-auto">
        <div class="p-2 flex justify-center sticky top-0 bg-white z-10">
            <div class="w-12 h-1.5 bg-gray-200 rounded-full"></div>
        </div>
        <div class="px-6 pb-8 pt-2">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-gray-900">Sort & Filter</h3>
                <button onclick="closeSortFilter()"
                    class="p-2 bg-gray-100 rounded-full text-gray-400 hover:text-gray-900"><i
                        class="fas fa-times"></i></button>
            </div>

            <div class="space-y-8">
                <!-- Sort Section -->
                <div>
                    <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Sort By</label>
                    <div class="space-y-2">
                        <button onclick="handleSort('expiry-asc')"
                            class="sort-btn w-full flex items-center justify-between p-4 rounded-xl border border-transparent bg-gray-50 text-left hover:bg-emerald-50 hover:border-emerald-100 transition-all group">
                            <div class="flex items-center">
                                <span
                                    class="w-8 h-8 rounded-full bg-white flex items-center justify-center text-emerald-600 shadow-sm mr-3 group-hover:scale-110 transition-transform"><i
                                        class="fas fa-hourglass-end"></i></span>
                                <span class="font-bold text-gray-700 group-hover:text-emerald-800">Expiring Soon</span>
                            </div>
                            <i class="fas fa-check text-emerald-600 opacity-0 check-icon"></i>
                        </button>
                        <button onclick="handleSort('expiry-desc')"
                            class="sort-btn w-full flex items-center justify-between p-4 rounded-xl border border-transparent bg-gray-50 text-left hover:bg-emerald-50 hover:border-emerald-100 transition-all group">
                            <div class="flex items-center">
                                <span
                                    class="w-8 h-8 rounded-full bg-white flex items-center justify-center text-emerald-600 shadow-sm mr-3 group-hover:scale-110 transition-transform"><i
                                        class="fas fa-leaf"></i></span>
                                <span class="font-bold text-gray-700 group-hover:text-emerald-800">Freshest First</span>
                            </div>
                            <i class="fas fa-check text-emerald-600 opacity-0 check-icon"></i>
                        </button>
                        <button onclick="handleSort('alpha-asc')"
                            class="sort-btn w-full flex items-center justify-between p-4 rounded-xl border border-transparent bg-gray-50 text-left hover:bg-emerald-50 hover:border-emerald-100 transition-all group">
                            <div class="flex items-center">
                                <span
                                    class="w-8 h-8 rounded-full bg-white flex items-center justify-center text-emerald-600 shadow-sm mr-3 group-hover:scale-110 transition-transform"><i
                                        class="fas fa-sort-alpha-down"></i></span>
                                <span class="font-bold text-gray-700 group-hover:text-emerald-800">Name (A-Z)</span>
                            </div>
                            <i class="fas fa-check text-emerald-600 opacity-0 check-icon"></i>
                        </button>
                    </div>
                </div>

                <!-- Category Section -->
                <div>
                    <label
                        class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Categories</label>
                    <div class="grid grid-cols-4 gap-3" id="unified-category-grid">
                        <button onclick="filterByCategory('all')"
                            class="cat-btn bg-gray-900 text-white shadow-md transform scale-105 flex flex-col items-center justify-center p-3 rounded-2xl transition-all"
                            data-cat="all">
                            <div class="text-2xl mb-1">üè†</div>
                            <span class="text-[10px] font-bold">All</span>
                        </button>
                    </div>
                </div>

                <div class="sticky bottom-0 bg-white pt-4 pb-2 border-t border-gray-100 flex gap-4">
                    <button onclick="resetFilters()"
                        class="px-6 py-4 rounded-xl text-sm font-bold text-gray-500 hover:text-gray-900 bg-gray-50 hover:bg-gray-100 transition-colors">Reset</button>
                    <button onclick="closeSortFilter()"
                        class="flex-1 px-6 py-4 rounded-xl text-sm font-bold text-white bg-emerald-600 shadow-lg shadow-emerald-200 hover:bg-emerald-700 active:scale-95 transition-all">Show
                        Results</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Load Inventory Logic -->
    <script src="/js/inventory.js"></script>

    <%- include('../partials/footer') %>